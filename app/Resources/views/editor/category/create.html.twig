{% extends 'base.html.twig' %}

{% block body %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('category_create') }}" method="post">
                <fieldset>
                    <legend><strong>Create category</strong></legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="category_name">Category name: </label>
                        <div class="col-sm-4">
                            <input type="text" id="category_name" class="form-control" name="category[name]">
                            </input>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('homepage') }}">Cancel</a>
                            <button type="submit" class="btn btn-success">Create</button>
                        </div>
                    </div>
                    {{ form_row(form._token) }}
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}

