{% extends 'base.html.twig' %}

{% block body %}
    <legend class="text-center"><strong>Search by category</strong></legend>
    <div class="well">
        <form class="form-horizontal" method="GET" action="{{ path('search_by_category') }}">
            <div class="form-group">
                <label class="col-sm-4 control-label" for="search_text">Search: </label>
                <div class="col-sm-4">
                    <input class="form-control" id="search_text" type="text" name="name">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="category">Category: </label>
                <div class="col-sm-4">
                    <select class="form-control" id="category" name="category_id">
                        {% for category in categories %}
                            <option value="{{ category.id }}">{{ category.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-5">
                    <a class="btn btn-default" href="{{ previousUrl }}">Cancel</a>
                    <button type="submit" class="btn btn-primary btn-md">Search</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

